<html lang="en">
  <head>
    <link rel="stylesheet" href="/stylesheets/status.css" />
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <title>Status do Pedido</title>
  </head>
  <body>
    <header><%- include("./partials/header") %></header>
    <div class="container-status">
      <div class="pedido-numero">
        <p>Pedido número <%= pedido.id%></p>
      </div>
      <div class="progressbar">
        <div class="progress" id="progress"></div>
        <div
          class="progress-step progress-step-active"
          data-title="recebido"
        ></div>
        <div class="progress-step" data-title="nota fiscal emitida"></div>
        <div class="progress-step" data-title="preparando envio"></div>
        <div class="progress-step" data-title="enviado"></div>
        <div class="progress-step" data-title="entregue"></div>
      </div>
      <section class="pedidos-trocas">
        <div class="pedido-detalhes">
          <p class="status">Detalhes do Pedido</p>
          <div class="pedidos-quantidade">
            <table class="table table-default table-striped table-hover ">
              <thead class="table-striped">
              <tr>
                <td>Nome</td>
                <td>Preço</td>
                <td>Quantidade</td>
              </tr>
            </thead>
              <% pedidosItens.forEach(item => { %>
    
                  <tr>
                    <td>
                      <%= item.nome %> 
                    </td>
                    <td>
                      <%= item.preco %> 
                    </td>
                    <td>
                      <%= item.quantidade %> 
                    </td>
                  </tr>
                  <% }); %>
                </table>
          </div>
        </div>
          
      </section>
    </div>
    <footer><%- include("./partials/footer") %></footer>
  </body>
</html>
