<html lang="en">
  <head>
    <link rel="stylesheet" href="/stylesheets/status.css" />
    <title>Favoritos</title>
  </head>
  <body>
    <header><%- include("./partials/header") %></header>
    <div class="container-status">
      <div class="pedido-numero">
        <p>pedido numero xxx</p>
      </div>
      <div class="progressbar">
        <div class="progress" id="progress"></div>
        <div
          class="progress-step progress-step-active"
          data-title="recebido"
        ></div>
        <div class="progress-step" data-title="nota fiscal emitida"></div>
        <div class="progress-step" data-title="preparando envio"></div>
        <div class="progress-step" data-title="enviado"></div>
        <div class="progress-step" data-title="entregue"></div>
      </div>
      <section class="pedidos-trocas">
      <div class="pedido-detalhes">
          <p class="status">detalhes do pedido</p>
          <div class="pedidos-quantidade">
            <% pedido.forEach(item => { %>
          <span><%= item.nome %> </span>
          <% console.log(item.itens.nome)%>
          <span><%= item.preco %></span>
          <span><%= item.quantidade %></span>
          <% }); %>
        </div>
          </div>
      <div class="contact">
        <p class="status">precisa de ajuda?</p>
        <a href="">trocar ou devolver</a>
      </div>
    </section>
    </div>
    <footer><%- include("./partials/footer") %></footer>
  </body>
</html>
