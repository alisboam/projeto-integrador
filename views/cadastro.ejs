<body class="cadastro">
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

<header><%- include("./partials/header") %></header>

<% if (errors) { %>
  <div class="alert alert-danger" role="alert">
    <ul>
      <% errors.errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }); %>
    </ul>
  </div>
<% } %>

<form class="form-signin needs-validation" novalidate method="POST">
    <div class="text-center mb-4">
      <h1 class="h3 mb-3 font-weight-normal">Minha conta</h1>
    </div>
    <div class="form-border">
      <h3 class="h4 mb-3 font-weight-normal text-center">Cadastre-se</h3>
      <div class="form-group">
        <label for="validationCustom01">Nome Completo</label>
        <input type="text" name="nome" class="form-control" id="validationCustom01" aria-describedby="emailHelp" required>
        <div class="invalid-feedback">
          O campo não pode ser vazio
        </div>
        <label for="data_nascimento">Data de Nascimento</label>
        <input type="text" name="data_nascimento" class="form-control" id="data_nascimento" aria-describedby="emailHelp" required>
        <div class="invalid-feedback">
          O campo não pode ser vazio
        </div>
        <label for="numero_documento">CPF ou CNPJ</label>
        <input type="text" name="numero_documento" class="form-control" id="numero_documento" aria-describedby="emailHelp" required>
        <div class="invalid-feedback">
          O campo não pode ser vazio
        </div>
        <label for="telefone">Telefone</label>
        <input type="text" name="telefone" class="form-control" id="telefone" aria-describedby="emailHelp" required>
        <div class="invalid-feedback">
          O campo não pode ser vazio
        </div>
        <label for="exampleInputEmail1">E-mail - Esté será seu login</label>
        <input type="email" name="email"class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required>
        <div class="invalid-feedback">
          O campo não pode ser vazio
        </div>
        <label for="exampleInputPassword1">Senha</label>
        <input type="password" name="senha"class="form-control" id="exampleInputPassword1" placeholder="Mínimo 6 caracteres" required></div>
        <div class="invalid-feedback">
          O campo não pode ser vazio
        </div>
            <label for="exampleInputPassword1">Confirmar senha</label>
            <input type="password" name="confirma" class="form-control" id="exampleInputPassword1" required></div>
            <div class="invalid-feedback">
              O campo não pode ser vazio
            </div>
    
